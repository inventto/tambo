<h1><%= @produto.nome %></h1>
<% if @produto.imagens.empty? %>
  <%= image_tag 'imagem_produto_default.png' %>
<% else %>
  <div class="col-xs-5">
    <div class="thumbnail">
      <%= show_first_image_or_default_for(@produto) %>
      <div class="caption">
        <%= content_tag(:h3,@produto.nome) %>
        <h4><%= link_to(@produto.artista.nome, @produto.artista.url_unica)  %></h4>
        <p><%= @produto.descricao  %></p>
        <div class="row">
          <div class="small">
            <% for image in @produto.imagens  %>
              <%= image_tag(image.anexo.url(:small_thumb)) %>
            <% end  %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-5">
        <p><%= link_to("Comprar", "#", class:"btn btn-primary", role: "button", action: "comprar") %></p>
  </div>
<% end %>

