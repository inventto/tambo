      <a class="left carousel-control" href="#myCarousel" data-slide="prev"> </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"> </a>
    </div><!-- /.carousel -->
  </div>
<%end%>


<div class="vitrine1">
  <% for categoria in @categorias  %>
    <h2><%= categoria.nome  %></h2>
    <div class="row">
      <% for produto in categoria.produtos  %>
        <div class="col-sm-5 col-md-3">
          <div class="thumbnail">
            <%= show_first_image_or_default_for(produto) %>
            <div class="caption">
              <%= content_tag(:h3,produto.nome) %>
              <h4><%= link_to(produto.artista.nome, produto.artista.url_unica)  %></h4>
              <p><%= produto.descricao  %></p>
              <p><%= link_to("Ver mais...", produto.url_unica, class:"btn btn-primary", role: "button") %></p>
            </div>
          </div>
        </div>
      <% end  %>
    </div>
  <% end  %>
</div>
