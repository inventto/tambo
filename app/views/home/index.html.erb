<div class="vitrine1">
  <h1>Vitrines</h1>
  <% for categoria in @categorias  %>
    <h2><%= categoria.nome  %></h2>
    <div class="row">
      <% for produto in categoria.produtos  %>
        <%= render 'ver_detalhes_produto', locals: {produto: produto } %>
      <% end  %>
    </div>
  <% end  %>
</div>

<div class="vitrine2">
  <h1>Coleções</h1>
  <% for colecao in @colecoes  %>
    <h2><%= colecao.nome  %></h2>
    <%= image_tag colecao.imagem.url(:thumb ) %>
    <div class="row">
      <% for produto in colecao.produtos  %>
        <%= render 'ver_detalhes_produto', locals: {produto: produto } %>
      <% end  %>
    </div>
  <% end  %>
</div>
