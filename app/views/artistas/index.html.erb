<h1>Artistas</h1>
<% if @artistas.empty? %>
  <h1>Nenhum artista cadastrado</h1>
<% else %>
  <% for artista in @artistas do %>
    <div class="artista" object-id="<%= artista.id %>">
      <%= image_tag(artista.foto_perfil.url(:thumb))  %>
      <h2 class='nome'><a href="/<%= uniq_url_for(artista) %>"><%= artista.nome %></a></h2>
      <p class='well'>
        <%= artista.biografia %>
      </p>
    </div>
  <% end %>
<% end %>
